<launch>
	<include file="$(find hexapod_remote)/launch/hexapod_remote.launch" />
        <rosparam file="$(find simple_hexapod_controller)/config/lobsang.yaml" command="load"/>
        <rosparam file="$(find simple_hexapod_controller)/config/gait.yaml" command="load"/>
        <node name="Hexapod" pkg="simple_hexapod_controller" type="simple_hexapod_controller_node"/>
        <node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(find simple_hexapod_controller)/rviz_cfg/hexapod.rviz"/>
        
        <param name="/hexapod/debug_parameters/rviz" value="true"/>
</launch>
