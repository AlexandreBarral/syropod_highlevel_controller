<launch>
	<include file="$(find hexapod_remote)/launch/hexapod_remote.launch"/>
        <rosparam file="$(find flexipod_hexapod)/config/flexipod.yaml" command="load"/>
        <rosparam file="$(find simple_hexapod_controller)/config/gait.yaml" command="load"/>
        <node name="simple_hexapod_controller" pkg="simple_hexapod_controller" type="simple_hexapod_controller_node" output="screen"/>
        <node name="rviz" pkg="rviz" type="rviz" args="-d $(find simple_hexapod_controller)/rviz_cfg/hexapod.rviz"/>
        
        <param name="/hexapod/debug_parameters/debug_rviz" value="true"/>
        <!--param name="/hexapod/parameters/imu_compensation" value="false"/-->
        <param name="/hexapod/parameters/inclination_compensation" value="false"/>
</launch>

